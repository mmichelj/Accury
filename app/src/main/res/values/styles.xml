<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="TextMain">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="icons" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/font_awesome</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="TextGreen">
    <item name="android:textColor">@color/textGreen</item>
    <item name="android:fontFamily">@font/bunya</item>
    <item name="android:textSize">22sp</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">0</item>
    <item name="android:shadowColor">#1b1b1b</item>
    <item name="android:shadowRadius">7</item>
    <item name="android:textStyle">bold</item>
    </style>
    <style name="TextMenu">
        <item name="android:textColor">@color/colorTextMenu</item>
        <item name="android:fontFamily">@font/capsuula</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>
